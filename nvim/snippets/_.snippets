snippet vim "modeline, see h: modeline" w
  vim: foldlevel=0
snippet date "date" w
	`strftime("%Y-%m-%d")`
snippet ddate "date" w
	`strftime("%B %d, %Y")`
snippet diso "date" w
	`strftime("%Y-%m-%dT%H:%M:%S")`
snippet time "time" w
	`strftime("%H:%M")`
snippet dt "date and time" w
	`strftime("%Y-%m-%d %H:%M")`
snippet todo "todo" w
  TODO: `$USER` ~ ${0:${VISUAL}}
snippet fix "fix" w
  FIXME: `$USER` ~ ${0:${VISUAL}}
snippet note "note" w
  NOTE: `$USER` ~ ${0:${VISUAL}}
snippet d "done" w
  ${0:${VISUAL}} âœ…

snippet make "Makefile" w
  BINARY_NAME := ${1}
  OUTPUT_DIR := ${2}
  BUILD_DIR := build

  all: build install

  build:
    mkdir -p $(OUTPUT_DIR)
    mkdir -p $(BUILD_DIR)
    ${3} $(BUILD_DIR)/$(BINARY_NAME) ${0}

  install:
    cp $(BUILD_DIR)/$(BINARY_NAME) $(OUTPUT_DIR)/$(BINARY_NAME)

  clean:
    rm -f $(BUILD_DIR)/$(BINARY_NAME)
    rm -f $(OUTPUT_DIR)/$(BINARY_NAME)

  .PHONY: all build install clean
