extends jinja

snippet h "header" b
  ---
  # Author: Jose Lima
  # Date: `strftime("%Y-%m-%d %H:%M")` CST

  - name: "${1}"
    hosts: ${2:localhost}
    # order: shuffle
    gather_facts: false
    # serial: 10

    tasks:
      - name: "${1/\v(^\w+).*/\u\1/g} --> ${3}"
        ${0}

snippet debug "debug task" b
    ansible.builtin.debug:
      msg: |
            ${0}
