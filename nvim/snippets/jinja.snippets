snippet % "block" w
  {% ${1} %}

snippet bc "block comment" w
  {#
    ${0:${VISUAL}}
  #}

snippet %% "block" b
  {% ${1:tag_name} %}
  ${0}
  {% end$1 %}

snippet { "curly" w
  {{ ${1} }}

snippet if "if statement" w
  {% if ${1} %}
    ${0}
  {% endif %}

snippet for "for loop" w
  {% for ${1} %}
    ${0}
  {% endfor %}
