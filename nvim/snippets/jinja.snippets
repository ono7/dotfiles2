snippet sb "block"
  {% ${1} %}

snippet bc "block comment" w
  {#
    ${0:${VISUAL}}
  #}

snippet raw "Raw block" b
  {% raw %} ${0:${VISUAL}} {% endraw %}

snippet %% "block"
  {% ${1:tag_name} %}
  ${0}
  {% end${1/\v(\w+).*/\1/g} %}

snippet { "curly" w
  {{ ${1} }}

snippet if "if statement" w
  {% if ${1} %}
    ${0}
  {% endif %}

snippet for "for loop" w
  {% for ${1} %}
    ${0}
  {% endfor %}
