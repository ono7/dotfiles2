# This is Git's per-user configuration file.
[user]
  name = lima
  email = lima@mbp
[core]
  editor = vim
  mergeoptions = --no-edit
[http]
  sslVerify = false
[url "https://github.com/"]
  insteadOf = git://github.com/
[credential]
  helper = osxkeychain
[init]
  defaultBranch = main
	templatedir = ~/.git_templates
[pull]
  rebase = false
[diff]
	algorithm = patience
	compactionHeuristic = true
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = vim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"
[merge]
	tool = nvimdiff4
	prompt = false
[mergetool "nvimdiff4"]
	cmd = vim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool]
	keepBackup = false
[push]
	autoSetupRemote = true

