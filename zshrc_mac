vq () {
  # pass all args to rg via $@ .. allows to append rg flags, muhahah
  vim -q <(rg --vimgrep --pcre2 -i -S $@) +"copen 6"
}

timezsh() {
  shell=${1-$SHELL}
  for i in $(seq 1 10); do /usr/bin/time $shell -i -c exit; done
}

