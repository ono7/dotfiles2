gorun () {
  if ! command -v gls &>/dev/null; then
    npm install -g nodemon
  fi
  if [ $# -eq 0 ]; then 
    nodemon --exec go run main.go --signal SIGTERM
  fi
  nodemon --exec go run $1 --signal SIGTERM
}

ta () {
  if [ ! -z $TMUX ] && [ ! -z $1 ]
  then
    tmux detach -E "tmux new -A -s '$1'"
  elif [ ! -z $TMUX ]
  then
    return
  else
    tmux new -As main
  fi
}

